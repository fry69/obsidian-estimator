{
  "name": "obsidian-estimator",
  "private": true,
  "version": "0.5.0",
  "type": "module",
  "scripts": {
    "check": "npm run cf-typegen && npm run format:check && npm run lint && npm run knip && npm run build",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "npm run build && vite preview",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "knip": "knip",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "build:staging": "VITE_CLOUDFLARE_ENV=staging tsc -b && vite build --mode staging",
    "deploy:staging": "VITE_CLOUDFLARE_ENV=staging npm run build:staging && wrangler deploy"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@tanstack/react-query": "^5.90.5",
    "chart.js": "^4.5.1",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.15",
    "@eslint/js": "^9.36.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24.9.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "knip": "^5.66.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.16",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.12",
    "vite-plugin-pwa": "^1.1.0",
    "wrangler": "^4.45.0"
  }
}
